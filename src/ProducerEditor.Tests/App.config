<?xml version="1.0"?>
<configuration>

	<configSections>
		<section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler,log4net"/>
	</configSections>

	<connectionStrings>
		<add name="Main" connectionString="Data Source=testsql.analit.net;Database=usersettings;User ID=system;Password=newpass;Connect Timeout=300;convert zero datetime=yes;Default command timeout=300;Allow User Variables=true"/>
		<add name="Slave" connectionString="Data Source=testsql.analit.net;Database=usersettings;User ID=system;Password=newpass;Connect Timeout=300;convert zero datetime=yes;Default command timeout=300;Allow User Variables=true"/>
	</connectionStrings>

	<appSettings>
		<add key="SynonymDeleteNotificationMail" value="kvasovtest@analit.net"/>
		<add key="SmtpServer" value="box.analit.net"/>
		<add key="UpdateUri" value="http://localhost/"/>
		<add key="Application" value="ProducerEditor"/>
		<add key="Version" value="1.0"/>
		<add key="Publisher" value="Inforoom"/>
	</appSettings>

	<log4net>

		<appender name="SQLFileLog" type="log4net.Appender.ConsoleAppender">
			<layout type="log4net.Layout.PatternLayout">
				<conversionPattern value="%d{HH:mm:ss.fff} [%t] %-5p %c - %m%n"/>
			</layout>
		</appender>

		<!-- levels: DEBUG, INFO, WARN, ERROR, FATAL -->

		<root>
			<level value="ERROR"/>
			<appender-ref ref="SQLFileLog"/>
		</root>

		<logger name="NHibernate.SQL" additivity="false">
			<level value="ALL"/>
			<appender-ref ref="SQLFileLog"/>
		</logger>

	</log4net>

</configuration>
